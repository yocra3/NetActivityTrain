/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run yocra3/NetActivityTrain -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    data_prefix   = 'https://github.com/yocra3/NetActivityTrain/blob/be72a0c43d48a743579c481ffa0203daf7f46c0a/data/test_'
    network = 'https://raw.githubusercontent.com/yocra3/NetActivityTrain/master/data/network_structure.py'
    network_params = 'https://raw.githubusercontent.com/yocra3/NetActivityTrain/master/data/network_params.py'
    gene_mask = 'https://media.githubusercontent.com/media/yocra3/NetActivityTrain/master/data/gene_map_mini.tsv'

}
